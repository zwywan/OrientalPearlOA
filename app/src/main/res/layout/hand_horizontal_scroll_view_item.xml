<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llayout_scroll_contanier"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/hand_horizontal_scroll_item_margin"
    android:layout_height="match_parent">

    <TextView
        tools:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_top"
        android:textSize="@dimen/hand_horizontal_scroll_time_size"
        android:textColor="@color/white"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pass"
        android:id="@+id/iv_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="2"
        android:id="@+id/tv_bottom"
        android:textSize="@dimen/hand_horizontal_scroll_content_size"
        android:ems="10"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_gravity="center"
        android:gravity="center_horizontal" />
</LinearLayout>