<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_cancel"
                android:text="取消"
                android:textSize="@dimen/pickerview_topbar_btn_textsize"
                android:textColor="@drawable/selector_pickerview_btn"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sv_query"
                android:queryHint="查询"
                android:layout_weight="1"
                android:imeOptions="actionGo"
                android:textSize="@dimen/pickerview_topbar_title_textsize"
                android:textColor="@color/pickerview_topbar_title" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_add"
                android:layout_gravity="right"
                android:text="添加"
                android:textSize="@dimen/pickerview_topbar_btn_textsize"
                android:textColor="@drawable/selector_pickerview_btn"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.geely.app.geelyapprove.common.view.SimpleListView
            android:layout_width="match_parent"
            android:id="@+id/lst_container"
            android:layout_height="match_parent">

        </com.geely.app.geelyapprove.common.view.SimpleListView>
    </LinearLayout>


</RelativeLayout>