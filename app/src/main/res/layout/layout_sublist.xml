<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/app_name"
            android:textColor="#858e99"
            android:maxEms="6"
            android:minEms="6"
            android:layout_marginRight="7dp"
            android:id="@+id/tv_title"
            android:gravity="left|top" />

        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="20dp"
            android:id="@+id/indicator_must_have"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="@color/alert"
            android:gravity="center_vertical" />
        <com.geely.app.geelyapprove.common.view.SubListLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:id="@+id/tv_value"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/sublist_container"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            </LinearLayout>
            <Button
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/sublist_add"
                android:background="@drawable/ic_post_flow_blue"
                android:layout_gravity="right|top"
                android:includeFontPadding="false"
                android:gravity="top|end" />
        </com.geely.app.geelyapprove.common.view.SubListLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:height="1dp"
        android:background="@color/gray_dark"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>